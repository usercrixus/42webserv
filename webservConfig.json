{
    "servers": [
        {
            "host": "localhost",
            "port": 8080,
            "server_names": ["example.com", "www.example.com"],
           "error_pages": {
                "404": "/errors/404.html",
                "500": "/errors/500.html"
            },
            "client_max_body_size": 10485760,
            "routes": [
                {
                    "path": "/",
                    "accepted_methods": ["GET", "POST"],
                    "root": "/var/www/html",
                    "index": "index.html",
                    "directory_listing": false
                },
                {
                    "path": "/images",
                    "accepted_methods": ["GET"],
                    "root": "/var/www/images",
                    "directory_listing": true,
                    "default_file": "gallery.html"
                },
                {
                    "path": "/upload",
                    "accepted_methods": ["POST"],
                    "upload_directory": "/var/www/uploads",
                    "max_upload_size": 5242880
                },
                {
                    "path": "/redirect",
                    "accepted_methods": ["GET"],
                    "redirect": "https://www.google.com"
                },
                {
                    "path": "/cgi-bin",
                    "accepted_methods": ["GET", "POST"],
                    "cgi_enabled": true,
                    "cgi_extensions": [".py", ".php"],
                    "cgi_root": "/var/www/cgi-bin"
                }
            ]
        },
        {
            "host": "localhost",
            "port": 8081,

            "server_names": ["backup-server.com"],
            "error_pages": {
                "404": "/errors/backup_404.html",
                "500": "/errors/backup_500.html"
            },

            "routes": [
                {
                    "path": "/",
                    "accepted_methods": ["GET"],
                    "root": "/var/www/backup",
                    "index": "index.html"
                },
                {
                    "path": "/admin",
                    "accepted_methods": ["GET", "POST", "DELETE"],
                    "root": "/var/www/admin",
                    "directory_listing": false
                }
            ]
        }
    ]
}

